<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wow.wowmeet.screens.main.drawer.DrawerFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/drawerBackground">

        <FrameLayout
            android:id="@+id/frameUserBackground"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#ababab">

        </FrameLayout>

        <ImageView
            android:id="@+id/imgDrawerProfilePicture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/frameUserBackground"
            android:layout_marginStart="20dp"
            android:layout_marginTop="-24dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txtUsernameDrawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/frameUserBackground"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="8dp"
            android:text="KaracaSoft"
            android:textColor="#f0f0f0"

            android:textSize="24sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listDrawerOptions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/drawerBackground" />
</LinearLayout>
