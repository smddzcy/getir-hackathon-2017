<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/row_event_list_cardView">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/row_horizontal_margin"
    android:paddingStart="@dimen/row_horizontal_margin"
    android:paddingRight="@dimen/row_horizontal_margin"
    android:paddingEnd="@dimen/row_horizontal_margin"
    android:paddingTop="@dimen/row_vertical_margin"
    android:paddingBottom="@dimen/row_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/row_event_list_imgProfilePhoto"
            android:layout_width="@dimen/row_event_list_image_width"
            android:layout_height="@dimen/row_event_list_image_height" />

        <TextView
            android:id="@+id/row_event_list_txtProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/row_horizontal_margin"
            android:text="Ergün Erdoğmuş"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/place"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/row_event_list_txtPlaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Beşiktaş"
            android:layout_weight="3"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/type"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/row_event_list_txtType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sinema"
            android:layout_weight="3"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/date"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/row_event_list_txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="03:02 01/01/1970"
            android:layout_weight="3"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</LinearLayout>

</android.support.v7.widget.CardView>