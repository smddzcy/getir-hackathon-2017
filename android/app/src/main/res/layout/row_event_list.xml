<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/row_horizontal_margin"
    android:paddingStart="@dimen/row_horizontal_margin"
    android:paddingRight="@dimen/row_horizontal_margin"
    android:paddingEnd="@dimen/row_horizontal_margin"
    android:paddingTop="@dimen/row_vertical_margin"
    android:paddingBottom="@dimen/row_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/row_event_list_imgProfilePhoto"
            android:layout_width="@dimen/row_event_list_image_width"
            android:layout_height="@dimen/row_event_list_image_height" />

        <TextView
            android:id="@+id/row_event_list_txtProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/row_horizontal_margin"
            android:text="Ergün Erdoğmuş"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Place: "
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/row_event_list_txtPlaceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Beşiktaş"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Type: "
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/row_event_list_txtType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Sinema"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_item_vertical_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Date: "
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/row_event_list_txtDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="03:02 01/01/1970"
            android:layout_weight="3"/>
    </LinearLayout>





</LinearLayout>